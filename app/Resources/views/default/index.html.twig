{% extends 'base.html.twig' %}

{% block body %}
    <h1>Blog</h1>

    {% for post in posts %}

        <div>
            <h2><a href="{{ path('post_show',{'id':post.id}) }}">{{ post.title }}</a></h2>
            <h4>{{ post.author }}</h4>
            <h4>{{ post.date|date('Y-m-d') }}</h4>
            <img src="{{ post.picture }}" alt="">
            <p>{{ post.summary }}</p>
        </div>
    {% endfor %}

    <div class="navigation">
        {{ knp_pagination_render(posts) }}
    </div>

{% endblock %}


